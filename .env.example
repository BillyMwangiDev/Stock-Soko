# ===============================================
# STOCK SOKO - ENVIRONMENT CONFIGURATION
# ===============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# APPLICATION SETTINGS
ENVIRONMENT=development
DEBUG=true

# DATABASE
DATABASE_URL=sqlite:///./stocksoko.db

# SECURITY
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_MINUTES=60

# M-PESA PAYMENTS
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASS KEY=your_mpesa_passkey
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://yourapp.com/api/v1/payments/callback
MPESA_ENV=sandbox

# MARKET DATA PROVIDERS
TWELVE_DATA_API_KEY=your_twelvedata_api_key
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key
MARKETSTACK_API_KEY=your_marketstack_api_key
MARKET_DATA_PROVIDER=rotate

# NEWS APIS
NEWS_API_KEY=your_newsapi_key
MARKETAUX_API_KEY=your_marketaux_key

# REDIS & CACHING
REDIS_URL=redis://127.0.0.1:6379/0
CACHE_TTL_SECONDS=300

# CELERY
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=100

# FEATURE FLAGS
ENABLE_2FA=true
ENABLE_NOTIFICATIONS=false

# LOGGING
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006
